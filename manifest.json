{

    "manifest_version": 2,
    "name": "Exploding Tabs",
    "version": "1.2",
    "author": "Kerem Kayabay",
    "description": "A browser extension to set up a countdown timer for addictive sites.",
    "icons": {
      "48": "icons/bomb-solid-48.png",
      "96": "icons/bomb-solid-96.png"
    },
  
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "<all_urls>"
    ],
  
    "browser_action": {
      "default_icon": "icons/bomb-solid-96.png",
      "default_title": "Exploding Tabs",
      "default_popup": "popup/exploding-tabs.html"
    },

    "page_action": {
      "default_icon": "icons/stopwatch-solid-48.png",
      "default_title": "Stop countdown"
    },

    "background": {
      "scripts": ["coordinator.js"]
    }
  }